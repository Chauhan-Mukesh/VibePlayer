#
# Robust .htaccess configuration for Vibe Player
# Provides routing, security headers, caching, and performance optimizations
#
# Note: If you use php built-in server, this file doesn't apply
# Prefer apache/php-fpm in production for best performance

# ==============================================================================
# 1. CANONICAL ROUTING
# ==============================================================================

RewriteEngine On
RewriteBase /

# Route all non-file requests to index.php while preserving query strings
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Return 410 Gone for removed/deprecated endpoints
RewriteRule ^install/?$ - [G,L]
RewriteRule ^admin/?$ - [G,L]
RewriteRule ^old-api/?$ - [G,L]

# ==============================================================================
# 2. SECURITY HEADERS
# ==============================================================================

<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Clickjacking protection
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS protection (legacy browsers)
    Header set X-XSS-Protection "1; mode=block"
    
    # Referrer policy for privacy
    Header always set Referrer-Policy "no-referrer-when-downgrade"
    
    # Content Security Policy (adjust as needed)
    Header always set Content-Security-Policy "default-src 'self' 'unsafe-inline' https: data:; frame-ancestors 'self'; object-src 'none'; base-uri 'self'"
    
    # HSTS (only if serving over HTTPS)
    # Uncomment the following line if using HTTPS
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Remove server information
    Header unset Server
    Header unset X-Powered-By
    
    # CORS headers for API endpoints
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Range"
    Header set Access-Control-Expose-Headers "Content-Range, Accept-Ranges"
</IfModule>

# ==============================================================================
# 3. CACHE CONTROL & COMPRESSION
# ==============================================================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Static assets - cache for 1 month
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Images - cache for 1 month
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 month"
    
    # Fonts - cache for 1 year
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Videos - cache for 1 week (if serving local videos)
    ExpiresByType video/mp4 "access plus 1 week"
    ExpiresByType video/webm "access plus 1 week"
    
    # HTML and API responses - no cache
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
    
    # Default fallback
    ExpiresDefault "access plus 1 week"
</IfModule>

<IfModule mod_deflate.c>
    # Compress text-based files for better performance
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # Don't compress already compressed files
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|zip|gz|tar|bz2|mp4|webm|mp3|ogg)$ no-gzip dont-vary
</IfModule>

# ==============================================================================
# 4. BLOCK SENSITIVE FILES
# ==============================================================================

# Block access to version control and deployment files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to configuration files
<FilesMatch "\.(env|ini|conf|config|log|bak|backup|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to composer and package manager files
<FilesMatch "(composer\.(json|lock)|package\.(json|lock)|yarn\.lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to documentation and development files
<FilesMatch "(README|CHANGELOG|CONTRIBUTING|LICENSE-README|NOTICE)\.(md|txt)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to Docker and CI/CD files
<FilesMatch "(Dockerfile|docker-compose\.yml|\.github|\.gitlab-ci\.yml)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to node_modules and vendor directories
<IfModule mod_rewrite.c>
    RewriteRule ^(node_modules|vendor)/ - [F,L]
</IfModule>

# ==============================================================================
# 5. SECURITY SETTINGS
# ==============================================================================

# Prevent directory browsing
Options -Indexes

# Follow symbolic links (required for some hosting)
Options +FollowSymLinks

# Disable server signature
ServerSignature Off

# Limit file upload size (adjust as needed)
php_value upload_max_filesize 512M
php_value post_max_size 512M

# Set secure PHP settings
php_value session.cookie_httponly 1
php_value session.cookie_secure 1
php_value session.use_strict_mode 1

# ==============================================================================
# 6. RANGE REQUESTS & STREAMING SUPPORT
# ==============================================================================

# Enable Range requests for video streaming
<IfModule mod_headers.c>
    # Ensure Accept-Ranges header is set for video files
    <FilesMatch "\.(mp4|webm|avi|mov|mkv|flv)$">
        Header set Accept-Ranges bytes
    </FilesMatch>
</IfModule>

# Optimize for video streaming
<IfModule mod_mime.c>
    # Set correct MIME types for video files
    AddType video/mp4 .mp4
    AddType video/webm .webm
    AddType video/ogg .ogv
    AddType video/avi .avi
    AddType video/quicktime .mov
</IfModule>

# ==============================================================================
# 7. CUSTOM ERROR PAGES
# ==============================================================================

# Custom error pages (optional - point to index.php for SPA)
ErrorDocument 404 /index.php
ErrorDocument 403 /index.php
ErrorDocument 500 /index.php

# ==============================================================================
# 8. PERFORMANCE OPTIMIZATIONS
# ==============================================================================

# Reduce server overhead
<IfModule mod_headers.c>
    # Remove ETag headers (we use Last-Modified instead)
    Header unset ETag
    FileETag None
</IfModule>

# Optimize Apache settings
<IfModule mod_negotiation.c>
    Options -MultiViews
</IfModule>

# Set charset for text files
<IfModule mod_mime.c>
    AddDefaultCharset utf-8
    AddCharset utf-8 .html .css .js .xml .json .rss .atom
</IfModule>

# ==============================================================================
# 9. LOGGING & MONITORING
# ==============================================================================

# Custom log format for monitoring (if CustomLog is available)
# LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-agent}i\" %D" vibeplayer
# CustomLog logs/vibeplayer_access.log vibeplayer

# ==============================================================================
# 10. ADDITIONAL NOTES
# ==============================================================================

# This .htaccess file is optimized for:
# - Security: Headers, file blocking, input validation
# - Performance: Compression, caching, optimization
# - Streaming: Range request support for video files
# - SEO: Proper redirects and canonical URLs
# - Compatibility: Works with most Apache 2.4+ configurations
#
# For production use:
# 1. Enable HTTPS and uncomment HSTS header
# 2. Adjust CSP policy based on your security requirements
# 3. Monitor logs for any blocked legitimate requests
# 4. Consider using Nginx + php-fpm for better performance
#
# For development:
# - This file is ignored when using PHP built-in server
# - Use Docker with Apache for testing .htaccess rules
# - Check Apache error logs if rewrite rules don't work